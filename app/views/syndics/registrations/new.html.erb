<div class="padding white">
  
  <!-- BEGIN block form condominium -->
  <div class="box-create">

    <fieldset>
      <legend class="span12 alert alert-success"><%= t 'condominium.new.title' %></legend>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

      <%= f.fields_for :condominium do |condominium_form| %>
      	<%= render 'condominium_form', f: condominium_form %>
      <% end %>

    </fieldset>

  </div>
  <!-- END block form condominium -->

  <div class="box-create-syndic">

    <fieldset>
      <legend  class="span12 alert alert-info"><%= t 'syndic.new.title' %></legend>

      <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= error_tag resource, :name %>
      </p>

      <p>
        <%= f.label :cpf %>
        <%= f.text_field :cpf %>
        <%= error_tag resource, :cpf %>
      </p>

      <p>
        <%= f.label :phone %>
        <%= f.text_field :phone %>
        <%= error_tag resource, :phone %>
      </p>

      <p>
        <%= f.label :email %>
        <%= f.email_field :email %>
        <%= error_tag resource, :email %>
      </p>

      <p>
        <%= f.label :password %>
        <%= f.password_field :password %>
        <%= error_tag resource, :password %>
      </p>

      <p>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
        <%= error_tag resource, :password_confirmation %>
      </p>

      <div class="form-actions">
        <%= f.submit t('button.save'), class: "btn btn-info" %>
      </div>

    <% end %><!-- END MAIN FORM SYNDIC -->

    </fieldset>
  </div>

      <%= render "syndics/shared/links" %>

</div>
